<body class="bg-light">

  <!-- inner -->

  <div class="container">
    <div class="py-5 text-center">
      <h2>LuckRain7's website</h2>
    </div>

    <div class="row">
      <!-- 
        右侧导航
        -->
      <div class="col-md-4 order-md-2 mb-4">
        <div style="position:fixed" class="menu-fixed">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">目录</span>
            <span class="badge badge-secondary badge-pill"><%=render.length %></span>
          </h4>
          <div class="list-group mb-3">
            <% render.forEach(function(item,index){ %>
              <a href="#<%=item.title %>" class="list-group-item list-group-item-action"><%=index+1 %>、<%=item.title %></a>
            <% }); %>
          </div>
          <!-- 搜索 -->
          <form class="card p-2">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Promo code">
              <div class="input-group-append">
                <button type="submit" class="btn btn-secondary">Search</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <!-- 
        左侧内容
        -->
      <div class="col-md-8 order-md-1">

        <!-- <%= %> -->

        <!-- prettier-ignore -->
        <% render.forEach(function(item){ %>
          <!-- 标题部分 <h4> 资源 </h4> -->
          <<%=item.tag %> id="<%=item.title %>" > <%=item.title %> </<%=item.tag %>>

          <!-- 内容部分 -->  
            <div class="recommond">
              <ul class="list-ul">
                <!-- list-li -->
                <% item.children.forEach(function(link){ %>
                <li class="list-li" data-toggle="tooltip" data-placement="top" title="<%=link.intro %>" >
                  <a href="<%=link.url %>" target="_blank">
                    <span class="span-img">
                      <img src="/bookmark-check.svg" alt=""> 
                    </span>
                    <span class="span-content span-content-active"><%=link.title %></span>
                  </a>
                </li>
                <% }); %>
              </ul>
            </div>
            <hr class="mb-4">
          
        <% }); %>




        
